<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="380dp">

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="385dp">

        <ListView
            android:id="@+id/listViewWifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="0dp"
             />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp">

        <TextView
            android:id="@+id/directionCompassId"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginEnd="145dp"
            android:layout_marginBottom="0dp"
            android:text="Direction: " />

        <TextView
            android:id="@+id/sadas"
            android:layout_width="153dp"
            android:layout_height="125dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="130dp"
            android:layout_marginBottom="0dp"
            android:lines="7"
            android:text="beacon 1 \nbeacon2 \nbeacon3 \nbeacon4 \nbeacon5 \nbeacon6 \nwifi" />

        <Button
            android:id="@+id/saveToDatabeseBtnId"
            android:layout_width="147dp"
            android:layout_height="52dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="131dp"
            android:layout_marginBottom="-1dp"
            android:text="Save measurments" />

        <Button
            android:id="@+id/buttonId"
            android:layout_width="129dp"
            android:layout_height="52dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="282dp"
            android:layout_marginBottom="1dp"
            android:text="Start scan" />

        <Button
            android:id="@+id/resetBtnId"
            android:layout_width="129dp"
            android:layout_height="52dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="5dp"
            android:text="Reset" />

        <EditText
            android:id="@+id/textView"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_above="@+id/buttonId"
            android:layout_marginBottom="84dp"
            android:hint="x cordinate: "
            android:textSize="12sp" />

        <EditText
            android:id="@+id/textView2"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_above="@+id/buttonId"
            android:layout_marginBottom="45dp"
            android:hint="y cordinate: "
            android:textSize="12sp" />

        <EditText
            android:id="@+id/textView3"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_above="@+id/buttonId"
            android:layout_marginBottom="4dp"
            android:hint="direction cordinate: "
            android:textSize="12sp" />


    </RelativeLayout>
</RelativeLayout>